<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
        xmlns:translations="clr-namespace:Pass_Keep.Resources.Translations.Popups.Account_Action_Selection"
        x:Class="Pass_Keep.Views.Account.Popups.AccountActionSelection">

    <Grid RowDefinitions = "Auto,Auto,Auto,Auto" ColumnDefinitions = "*,*,*" Padding = "0,15,0,0" WidthRequest = "300" BackgroundColor = "{AppThemeBinding Light = {StaticResource Grey50}, Dark = {StaticResource Gray950}}" RowSpacing = "20">
        <Label x:Name = "LabelPlatformName" Grid.Row = "0" Grid.Column = "0" Grid.ColumnSpan = "3" Margin = "0" VerticalTextAlignment = "Center" HorizontalTextAlignment = "Center" FontSize = "Title" FontAttributes = "Bold" />

        <Frame Grid.Row = "1" Grid.Column = "1" Margin = "0" Padding = "0" CornerRadius = "100">
            <Image x:Name = "ImageAccountProfileImage" HeightRequest = "100" WidthRequest = "100" Aspect = "AspectFill" />
        </Frame>

        <Label x:Name = "LabelAccountName" Grid.Row = "2" Grid.Column = "0" Grid.ColumnSpan = "3" HorizontalTextAlignment = "Center" FontSize = "16" TextColor = "#888888" />

        <Grid RowDefinitions = "60" ColumnDefinitions = "*,*,*" Grid.Row = "3" Grid.Column = "0" Grid.ColumnSpan = "3">
            <Button Grid.Row = "0" Grid.Column = "0" FontAttributes = "Bold" FontSize = "16" TextColor = "#222222" BackgroundColor = "{StaticResource ButtonDetailsBackgroundColour}" Text = "{x:Static translations:Localization.ButtonAccountDetails}" Clicked = "OnDetailsButtonClicked" CornerRadius = "0" />
            <Button Grid.Row = "0" Grid.Column = "1" FontAttributes = "Bold" FontSize = "16" TextColor = "#222222" BackgroundColor = "{StaticResource ButtonEditBackgroundColour}" Text = "{x:Static translations:Localization.ButtonAccountEdit}" Clicked = "OnEditButtonClicked" CornerRadius = "0" />
            <Button Grid.Row = "0" Grid.Column = "2" FontAttributes = "Bold" FontSize = "16" TextColor = "#222222" BackgroundColor = "{StaticResource ButtonDeleteBackgroundColour}" Text = "{x:Static translations:Localization.ButtonAccountDelete}" Clicked = "OnDeleteButtonClicked" CornerRadius = "0" />
        </Grid>
    </Grid>

</toolkit:Popup>