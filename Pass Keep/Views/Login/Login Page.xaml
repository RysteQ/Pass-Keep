<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pass_Keep.Views.Login.LoginPage"
             BackgroundColor="{AppThemeBinding Light = {StaticResource Grey50}, Dark = {StaticResource Grey900}}"
             xmlns:view_model="clr-namespace:Pass_Keep.View_Models.Login"
             xmlns:translations="clr-namespace:Pass_Keep.Resources.Translations.Views.Login"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             x:DataType="view_model:LoginVM"
             Title="LoginPage">

    <Grid RowDefinitions = "*" ColumnDefinitions = "*,8*,*">
        <Frame Grid.Row = "0" Grid.Column = "1" HorizontalOptions = "Fill" VerticalOptions = "Center" Margin = "10" Padding = "0">
            <Grid RowDefinitions = "75,Auto" ColumnDefinitions = "*">
                <Frame Grid.Row = "0" Grid.Column = "0" Margin = "0" BackgroundColor = "Firebrick" BorderColor = "Transparent" CornerRadius = "0">
                    <Grid>
                        <Label HorizontalOptions = "Center" VerticalOptions = "Center" TextColor = "White" FontAttributes = "Bold" FontSize = "Title"  Text = "{x:Static translations:Localization.Label_Login_Title}" />
                    </Grid>
                </Frame>

                <Frame Grid.Row = "1" Grid.Column = "0" BorderColor = "Transparent" Padding = "10">
                    <Grid RowDefinitions = "*" ColumnDefinitions = "0.25*,9*,0.25*" BackgroundColor = "Transparent">
                        <VerticalStackLayout Grid.Row = "0" Grid.Column = "1" Spacing = "10">
                            <VerticalStackLayout Spacing = "10">
                                <Frame Padding = "10,5,10,5" BorderColor = "Black" BackgroundColor = "Transparent" CornerRadius = "100">
                                    <Entry BackgroundColor = "Transparent" TextColor = "Black" Placeholder = "{x:Static translations:Localization.Entry_Username_Placeholder}" Text = "{Binding Username}" />
                                </Frame>
                                
                                <Frame Padding = "10,5,10,5" BorderColor = "Black" BackgroundColor = "Transparent" CornerRadius = "100">
                                    <Grid RowDefinitions = "*" ColumnDefinitions = "8*,2*">
                                        <Entry Grid.Row = "0" Grid.Column = "0" BackgroundColor = "Transparent" TextColor = "Black" Placeholder = "{x:Static translations:Localization.Entry_Password_Placeholder}" IsPassword = "{Binding IsPasswordVisible}" Text = "{Binding Password}" />
                                        <ImageButton Grid.Row = "0" Grid.Column = "1" Command = "{Binding CommandShowPassword}" />
                                    </Grid>
                                </Frame>
                            </VerticalStackLayout>

                            <Button BackgroundColor = "{AppThemeBinding Light = {StaticResource LightBlue400}, Dark = {StaticResource RedA700}}" TextColor = "White" FontAttributes = "Bold" FontSize = "Medium" Text = "{x:Static translations:Localization.Button_Login_Text}" Command = "{Binding CommandLogin}" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </Grid>
        </Frame>
    </Grid>

</ContentPage>