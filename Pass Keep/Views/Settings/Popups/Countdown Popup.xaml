<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
        xmlns:translations="clr-namespace:Pass_Keep.Resources.Translations.Popups.Countdown_Popup"
        x:Class="Pass_Keep.Views.Settings.Popups.CountdownPopup">

    <Grid RowDefinitions = "Auto,Auto" ColumnDefinitions = "*" WidthRequest = "300" Padding = "16" BackgroundColor = "{AppThemeBinding Light = {StaticResource Grey50}, Dark = {StaticResource Gray950}}" RowSpacing = "20">
        <Label x:Name = "LabelCountdown" Grid.Row = "0" Grid.Column = "0" VerticalOptions = "Center" HorizontalOptions = "Center" FontAttributes = "Bold" FontSize = "44" />
        <Button x:Name = "ButtonDeleteDatabase" Grid.Row = "1" Grid.Column = "0" IsEnabled = "False" BackgroundColor = "{StaticResource Red800}" Opacity = "0.5" FontAttributes = "Bold" TextColor = "White" Text = "{x:Static translations:Localization.ButtonDeleteDatabase}" Clicked = "OnButtonDeleteDatabaseClicked" />
    </Grid>

</toolkit:Popup>