<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pass_Keep.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Pass_Keep"
    xmlns:login_views="clr-namespace:Pass_Keep.Views.Login"
    xmlns:account_views="clr-namespace:Pass_Keep.Views.Account"
    xmlns:settings_views="clr-namespace:Pass_Keep.Views.Settings"
    xmlns:translations="clr-namespace:Pass_Keep.Resources.Translations.App_Shell">

    <ShellContent FlyoutItemIsVisible = "False" ContentTemplate = "{DataTemplate login_views:LoginPage}" />
    
    <FlyoutItem Route = "AccountListPage" Title = "{x:Static translations:Localization.Passwords_TabBar_Title}">
        <Tab Route = "AccountListPage">
            <ShellContent Route = "AccountListPage" ContentTemplate = "{DataTemplate account_views:AccountListPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title = "{x:Static translations:Localization.Settings_TabBar_Title}">
        <Tab>
            <ShellContent ContentTemplate = "{DataTemplate settings_views:SettingsPage}" />
        </Tab>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Label HorizontalOptions = "Center" Text = "TEST" />
    </Shell.FlyoutFooter>
    
</Shell>
