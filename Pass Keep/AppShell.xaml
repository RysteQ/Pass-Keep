<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pass_Keep.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Pass_Keep"
    xmlns:login_views="clr-namespace:Pass_Keep.Views.Login"
    xmlns:account_views="clr-namespace:Pass_Keep.Views.Account"
    xmlns:settings_views="clr-namespace:Pass_Keep.Views.Settings"
    xmlns:translations="clr-namespace:Pass_Keep.Resources.Translations.App_Shell"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title = "{x:Static translations:Localization.Login_TabBar_Title}">
            <ShellContent IsVisible = "False" ContentTemplate = "{DataTemplate login_views:LoginPage}" />
        </Tab>
        <Tab Title = "{x:Static translations:Localization.Passwords_TabBar_Title}">
            <ShellContent ContentTemplate = "{DataTemplate account_views:AccountListPage}" />
        </Tab>
        <Tab Title = "{x:Static translations:Localization.Settings_TabBar_Title}">
            <ShellContent ContentTemplate = "{DataTemplate settings_views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
